<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_layout1"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/top_bg_left" />
        
        <ImageView
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/top_bg_right" />

	    <RelativeLayout
	        android:id="@+id/rl_layout11"
	        android:layout_width="fill_parent"
	        android:layout_height="45.0dip"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/top_bg_middle" >
	
	        <TextView
	            android:id="@+id/tv_name"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:text="找 签 客"
	            android:textColor="@color/white"
	            android:textSize="16.0sp" />
	
	        <ImageButton
	            android:id="@+id/top_imgbtn"
	            android:layout_width="wrap_content"
	            android:layout_height="30.0dip"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/top_btn_right" />
	    </RelativeLayout>
    
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_layout2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_below="@id/rl_layout1"
        android:background="@drawable/search_background"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip">
        <EditText 
            android:id="@+id/search_text"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/search_search11" />

        <ImageButton
            android:id="@+id/search_pic"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_marginTop="13.0dip"
            android:background="@drawable/search_picture_right" />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/rl_layout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:id="@+id/rl_layout51"
	        android:layout_width="wrap_content"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bottom_bg_click"
	        android:orientation="horizontal">
	        <LinearLayout 
	            android:id="@+id/rl_layout51"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:gravity="center">
		        <ImageView 
			        android:id="@+id/bottom_tagstar"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingRight="5.0dip"
			        android:src="@drawable/bottom_tagstar_click"/>
		        
	            <TextView 
	                android:id="@+id/bottom_tagstar_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="5.0dip"
		            android:text="找签客"
		            android:textSize="18.0sp"
		            android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>      
        <ImageView 
            android:id="@+id/search_pic1"
            android:layout_width="1.0dip"                   
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_layout51"
            android:background="@drawable/bottom_bg_gap"/>
        
        <LinearLayout
            android:id="@+id/rl_layout52"
	        android:layout_width="wrap_content"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/search_pic1"
	        android:background="@drawable/bottom_bg_commen">
            
            <LinearLayout 
	            android:id="@+id/rl_layout51"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:gravity="center">
	            <ImageView 
		            android:id="@+id/bottom_mes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="4.0dip"
		            android:src="@drawable/bottom_mes_commen"/>
	        
	            <TextView 
	                android:id="@+id/bottom_mes_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="4.0dip"
		            android:text="来 信"
		            android:textSize="18.0sp"
		            android:textColor="@color/white"/>
            </LinearLayout>
            
        </LinearLayout>     
        <ImageView 
            android:id="@+id/search_pic2"
            android:layout_width="1.0dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_layout52"
            android:background="@drawable/bottom_bg_gap"/>
        
        <LinearLayout 
            android:id="@+id/rl_layout53"
	        android:layout_width="wrap_content"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/search_pic2"
	        android:background="@drawable/bottom_bg_commen">
            
            <LinearLayout 
	            android:id="@+id/rl_layout51"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:gravity="center">
	            <ImageView 
		            android:id="@+id/bottom_mes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="4.0dip"
		            android:src="@drawable/bottom_my_commen"/>
	        
	            <TextView 
	                android:id="@+id/bottom_mes_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="4.0dip"
		            android:text="我 的"
		            android:textSize="18.0sp"
		            android:textColor="@color/white"/>
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_layout4"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_below="@id/rl_layout2"
        android:layout_above="@id/rl_layout5"
	    android:background="@color/white4">
        
        <com.example.first.RefreshableView
	        android:id="@+id/refreshable_view"
	        android:layout_width="fill_parent"
	        android:layout_height="400dip">
            
	        <ListView 
	            android:id="@+id/main_listview"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	            
	        </ListView>
	        
        </com.example.first.RefreshableView>
    </RelativeLayout>
</RelativeLayout>
